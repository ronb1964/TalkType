{
  "app-id": "io.github.ronb1964.TalkType",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "dictate-tray",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland", 
    "--device=dri",
    "--socket=pulseaudio",
    "--filesystem=home:ro",
    "--filesystem=xdg-config:create",
    "--device=all",
    "--socket=session-bus",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "python-dependencies",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-cache-dir --prefix=${FLATPAK_DEST} numpy sounddevice evdev pyperclip toml faster-whisper"
      ],
      "sources": [
        {
          "type": "file",
          "path": "requirements.txt"
        }
      ]
    },
    {
      "name": "talktype",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-cache-dir --prefix=${FLATPAK_DEST} .",
        "install -Dm644 io.github.ronb1964.TalkType.desktop ${FLATPAK_DEST}/share/applications/io.github.ronb1964.TalkType.desktop",
        "install -Dm644 io.github.ronb1964.TalkType.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/io.github.ronb1964.TalkType.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
